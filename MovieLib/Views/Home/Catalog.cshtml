@model IEnumerable<MovieLib.Models.MovieModel>

@{
    ViewBag.Class = "content";
    ViewBag.Css = "~/CSS/CatalogStyle.css";
    ViewBag.Button = "Create";
    ViewBag.ButtonText = "Добавить Фильм";

    if (Model.Count() > 0)
    {
        foreach (var movie in Model)
        {
            <div id="movie_sample">
                <a asp-action="ViewContent" asp-route-id="@movie.ID">
                    <img src="@movie.PictureURL" />
                </a>
                <h1 id="movie_title">@movie.Title</h1>
            </div>
        }
    }
    else
    {
        <h4>База данных пуста. Добавьте фильм в базу нажав на кнопку "Добавить фильм"!</h4>
    }
}