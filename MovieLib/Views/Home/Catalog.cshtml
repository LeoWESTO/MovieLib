@model IEnumerable<MovieLib.Models.MovieModel>

@{
    ViewBag.Css = "~/CSS/CatalogStyle.css";
    ViewBag.Button = "Create";
    ViewBag.ButtonText = "Добавить Фильм";

    if (Model.Count() > 0)
    {
        foreach (var movie in Model)
        {
            <div class="movie_sample">
                <img src="@movie.PictureURL" />
                <a asp-action="ViewContent" asp-route-id="@movie.ID" class="movie_title">
                    @movie.Title
                </a>
            </div>
        }
    }
    else
    {
        <h4>База данных пуста. <br/>Добавьте фильм в базу нажав на кнопку "Добавить фильм"!</h4>
    }
}