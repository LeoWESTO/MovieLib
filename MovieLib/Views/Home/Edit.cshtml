@model MovieLib.Models.MovieModel
@{
    ViewBag.Title = "Редактировать фильм";
    ViewBag.Css = "~/CSS/EditStyle.css";
    ViewBag.Action = "Delete";
    ViewBag.ButtonText = "Удалить";
    ViewBag.ID = Model.ID;
}

<form asp-action="Edit" asp-controller="Home" asp-route-id="@Model.ID">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название: </label>
        <input type="text" asp-for="Title" class="form-control" value="@Model.Title" />
    </div>
    <div class="form-group">
        <label asp-for="ReleaseYear" class="control-label">Год выхода: </label>
        <input type="text" asp-for="ReleaseYear" class="form-control" value="@Model.ReleaseYear" />
    </div>
    <div class="form-group">
        <label asp-for="PictureURL" class="control-label">Ссылка на постер: </label>
        <input type="text" asp-for="PictureURL" class="form-control" value="@Model.PictureURL" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание фильма: </label>
        <textarea asp-for="Description" class="form-control" rows="10" cols="45">@Model.Description</textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить изменения" class="btn btn-default" />
    </div>
</form>