@model MovieLib.Models.MovieModel
@{
    ViewBag.Title = "Информация о фильме";
    ViewBag.Class = "ViewContent";
    ViewBag.Css = "~/CSS/ViewStyle.css";
    ViewBag.Button = "Edit";
    ViewBag.ButtonText = "Редактировать";
    ViewBag.ID = Model.ID;
}
    <form asp-action="ViewContent" asp-controller="Home" asp-route-id="@Model.ID">
        <div id="movie_info">
            <div id="poster">
                <img src="@Model.PictureURL" />
            </div>
            <div id="info">
                <label>@Model.Title</label>
                <label>@Model.ReleaseYear</label>
                <label>@Model.Description</label>
            </div>
        </div>
    </form>

